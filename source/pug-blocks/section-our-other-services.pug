mixin ourOtherServicesButtons({ name, service, description, isCurrent })
  li.tabs-slider__item.tabs-slider__item--public-interiors
    button.tabs-slider__button.menu-text(class= isCurrent ? 'tabs-slider__button--active' : false, type="button", name= name)= service

mixin ourOtherServicesDescription({ name, service, description, detailed, isCurrent })
  li.tabs-slider__details.tabs-slider__details--public-interiors(class= isCurrent ? 'tabs-slider__details--active' : false, data-topic= name)
    p.tabs-slider__description.cta-text!= description
      if (detailed)
        ol
          each subItem in detailed
            li= subItem
    a.tabs-slider__link.links-text.section__link(href="##", onclick="return false") Наши работы

section.our-other-services
  .wrapper
    .title-container
      h2.section__title.title3 Что еще мы делаем?
    // слайдер дополнительных услуг
    .our-other-services__slider.tabs-slider
      ul.tabs-slider__list
        each item in OUR_OTHER_SERVICES
          +ourOtherServicesButtons(item)
      ul.tabs-slider__details-list
        each item in OUR_OTHER_SERVICES
          +ourOtherServicesDescription(item)
