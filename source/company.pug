extends pug-blocks/page-layout.pug

block prepend variables
  - const currentPage = 'company';
  - const pageTitle = 'О компании MS Architects';

block main
  main.main
    h1.visuallyhidden О компании MS Architects.
    .wrapper
      .top-image
        img(src="./img/company-office.jpg", width="967", height="628", alt="Интерьер офиса MS Architects.")
    include pug-blocks/section-company-theses.pug
    section.clients
      .wrapper
        .title-container.animated-appearance
          h2.section__title.title3
            | Нашему качеству
            br
            | доверяют
        ul.clients__list.animated-appearance
          li.clients__item.clients__item--sok.animated-appearance
            a.clients__link(href="https://sok.works", target="_blank")
              span.visuallyhidden SOK
          li.clients__item.clients__item--stroitransgaz.animated-appearance
            a.clients__link(href="https://stng.ru", target="_blank")
              span.visuallyhidden Стройтранснефтегаз
          li.clients__item.clients__item--ikea.animated-appearance
            a.clients__link(href="https://www.ikea.com", target="_blank")
              span.visuallyhidden IKEA
          li.clients__item.clients__item--accenture.animated-appearance
            a.clients__link(href="https://www.accenture.com", target="_blank")
              span.visuallyhidden Accenture
          li.clients__item.clients__item--alium.animated-appearance
            a.clients__link(href="http://obolensk.ru", target="_blank")
              span.visuallyhidden Алиум
          li.clients__item.clients__item--mtsbank.animated-appearance
            a.clients__link(href="https://www.mtsbank.ru", target="_blank")
              span.visuallyhidden МТС Банк
          li.clients__item.clients__item--nornickel.animated-appearance
            a.clients__link(href="https://www.nornickel.ru", target="_blank")
              span.visuallyhidden Норникель
          li.clients__item.clients__item--otkrytie.animated-appearance
            a.clients__link(href="https://mgm.open.ru", target="_blank")
              span.visuallyhidden Открытие
          li.clients__item.clients__item--sberbank.animated-appearance
            a.clients__link(href="https://www.sberbank.ru", target="_blank")
              span.visuallyhidden Сбербанк
          li.clients__item.clients__item--gazprommedia.animated-appearance
            a.clients__link(href="http://www.gazprom-media.com", target="_blank")
              span.visuallyhidden Газпром-медиа
          li.clients__item.clients__item--huawei.animated-appearance
            a.clients__link(href="https://www.huawei.com", target="_blank")
              span.visuallyhidden Huawei
          li.clients__item.clients__item--simple.animated-appearance
            a.clients__link(href="http://simple.ru", target="_blank")
              span.visuallyhidden Simple
          li.clients__item.clients__item--jll.animated-appearance
            a.clients__link(href="https://www.jll.ru", target="_blank")
              span.visuallyhidden JLL
          li.clients__item.clients__item--oknastolicy.animated-appearance
            a.clients__link(href="http://www.okna-stolicy.ru", target="_blank")
              span.visuallyhidden Окна Столицы
          li.clients__item.clients__item--rostelecom.animated-appearance
            a.clients__link(href="https://rt.ru", target="_blank")
              span.visuallyhidden Ростелеком
    section.proud-of-work.animated-appearance
      .wrapper
        .title-container.animated-appearance
          h2.section__title.title3
            | Мы гордимся
            br
            | своей работой
        // слайдер работ
        .proud-of-work__slider.works-slider.animated-appearance
          ul.works-slider__list
            li.works-slider__item.works-slider__item--prev
              a(href="##", onclick="return false")
                img(src="./img/photo-2.jpg", width="423", height="244", alt="Интерьеры отделений Сбербанка России.")
            li.works-slider__item.works-slider__item--central
              a(href="##", onclick="return false")
                img(src="./img/airport-savino_1.jpg", width="460", height="315", alt="Аэропорт Большое Савино город Пермь.")
            li.works-slider__item.works-slider__item--next
              a(href="##", onclick="return false")
                img(src="./img/photo-1.jpg", width="423", height="244", alt="Жилой комплекс в Лангепасе.")
          .works-slider__marker
            .works-slider__pointer
    include pug-blocks/section-bottom-advice.pug

block popups
  include pug-blocks/popup-callback.pug
