{
  "name": "ms-architects",
  "private": true,
  "description": "Учебный проект, свёрстанный для отработки навыков фронтенд разработки",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sFlcn/ms-architects.git"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.3.2",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "parcel": "^2.3.0",
    "parcel-reporter-static-files-copy": "^1.3.4",
    "stylelint": "^14.3.0",
    "stylelint-config-standard": "^24.0.0"
  },
  "scripts": {
    "test": "stylelint \"source/css/**/*.css\" && eslint source/js/",
    "clean": "rm -r dist/* && rm -r .parcel-cache/*",
    "start": "parcel source/*.pug source/js/*.js",
    "build": "parcel build source/index.pug --public-url ./"
  },
  "staticFiles": {
    "staticPath": "source/slider",
    "staticOutPath": "slider"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "Firefox ESR",
    "not ie <= 11"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-length": "long",
      "string-quotes": "double",
      "no-duplicate-selectors": true,
      "selector-attribute-quotes": "always",
      "declaration-no-important": true,
      "property-no-vendor-prefix": true,
      "value-no-vendor-prefix": true,
      "number-leading-zero": "always",
      "function-url-quotes": "always",
      "font-family-name-quotes": "always-unless-keyword",
      "at-rule-no-vendor-prefix": true,
      "selector-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "selector-class-pattern": ".*",
      "value-keyword-case": [
        "lower",
        {
          "camelCaseSvgKeywords": true
        }
      ]
    }
  }
}
